<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.chocoroll.buyto.Mine.MyInfoFragment"
    android:orientation="vertical"
     android:background="#ffffff">


    <LinearLayout
        android:layout_marginLeft="15dp"
        android:layout_marginTop="180dp"
    android:layout_gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.chocoroll.buyto.Model.MyTextViewBold
            android:id="@+id/TextView01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="변경 비밀번호 : "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:typeface="sans"
            android:textColor="#6B6B6B"
            />

        <EditText
            android:id="@+id/edit_pw"
            android:layout_width="247dp"
            android:layout_height="wrap_content"
            android:ems="9"
            android:hint=" 영문/숫자 조합 6~12개를 입력해주세요."
            android:inputType="textPassword"
            android:maxLength="12"
            android:singleLine="true"
            android:textSize="14dp"
            android:typeface="sans"
            android:background="@null"/>
    </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="115dp"
            android:layout_width="200dp"
            android:layout_height="1dp"
            android:background="@color/main_color"
            android:orientation="vertical" >
        </LinearLayout>

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <com.chocoroll.buyto.Model.MyTextViewBold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비밀번호 확인 : "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:typeface="sans"
            android:textColor="#6B6B6B"/>

        <EditText
            android:id="@+id/edit_pwconfirm"
            android:textSize="14dp"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:ems="9"
            android:hint="  비밀번호를 다시한번 입력해주세요."
            android:inputType="textPassword"
            android:maxLength="12"
            android:singleLine="true"
            android:typeface="sans"
            android:background="@null"/>
    </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="115dp"
            android:layout_width="200dp"
            android:layout_height="1dp"
            android:background="@color/main_color"
            android:orientation="vertical" >
        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="확인"
            android:layout_marginTop="45dp"
            android:layout_gravity="center"
            android:layout_marginRight="20dp"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/main_color"
            android:background="@null"
            android:id="@+id/upload"/>
    </LinearLayout>

</LinearLayout>
