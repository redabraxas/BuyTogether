<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:id="@+id/level_bar"
        android:background="@color/seller">


        </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">


        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/example"
            android:id="@+id/thumbnailDeal" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.chocoroll.buyto.Model.MyTextViewBold
                android:layout_marginTop="2dp"
                android:layout_marginLeft="20dp"
                android:layout_width="250dp"
                android:layout_height="18dp"
                android:textSize="18dp"
                android:text="하"
                android:layout_marginBottom="15dp"
                android:textColor="#787878"
                android:id="@+id/txt_category"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <com.chocoroll.buyto.Model.MyTextView
                android:layout_marginLeft="20dp"
                android:layout_width="250dp"
                android:layout_height="20dp"
                android:textSize="16dp"
                android:text="상품이름kkkkkkkkkkkkkkkkkkkk"
                android:layout_marginBottom="10dp"
                android:textColor="#8C8C8C"
                android:id="@+id/txt_name"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />



            <RelativeLayout
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.chocoroll.buyto.Model.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:text="10000원"
                    android:textColor="#8C8C8C"
                    android:id="@+id/price"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <com.chocoroll.buyto.Model.MyTextView
                    android:paddingTop="3dp"
                    android:paddingBottom="1dp"
                    android:layout_marginLeft="70dp"
                    android:typeface="sans"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:text="현재인원"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:id="@+id/txt_people"
                    android:textColor="#f1ffffff"
                    android:background="#9981cf65"
                    android:layout_centerVertical="true"
                    android:layout_centerInParent="true"
                    />

                <com.chocoroll.buyto.Model.MyTextView
                    android:paddingBottom="1dp"
                    android:paddingTop="3dp"
                    android:typeface="sans"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textSize="14dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="마감날짜"
                    android:textColor="#f1ffffff"
                    android:background="#ffffa482"
                    android:id="@+id/txt_dday"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>




</LinearLayout>