<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/main_color">

        <LinearLayout
            android:layout_gravity="center"
            android:layout_marginLeft="12dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent">
            <TextView
                android:id="@+id/title_bar_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textSize="18dp"
                android:textColor="#ffffff"
                android:typeface="sans"
                android:text=" >  WISH DEAL"
                android:textStyle="bold"/>


        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/all"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">
    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@drawable/example"
            android:id="@+id/thumbnailDeal" />

        <LinearLayout
            android:layout_marginLeft="5dp"
            android:id="@+id/information"
            android:layout_marginTop="30dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_margin="5dp"
                android:id="@+id/category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                android:textColor="#6B6B6B"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="의류"
                android:id="@+id/big_category"/>
            <TextView
                android:textColor="#6B6B6B"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" > "/>
            <TextView
                android:textColor="#6B6B6B"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/small_category"
                android:text="남성의류"/>
            </LinearLayout>

            <TextView
                android:textColor="#6B6B6B"
                android:layout_margin="5dp"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/product"
                android:text="반팔"/>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/wish">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WISH "
                android:textStyle="bold"
                android:textColor="#E9B0B1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/wish_count"
                android:text="30"
                android:textColor="#E9B0B1"
                android:textStyle="bold"/>
            </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="318dp"
            android:layout_height="1dp"
            android:background="@color/main_color"
            android:orientation="vertical" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp">
        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이거 같이사용"
            android:id="@+id/comment"/>

        </LinearLayout>

        <LinearLayout
            android:layout_gravity="center"
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp">
            <ImageButton xmlns:android="http://schemas.android.com/apk/res/android"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@null"
                android:id="@+id/btnwish"
                android:src="@drawable/wish" />

            <ImageButton xmlns:android="http://schemas.android.com/apk/res/android"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:background="@null"
                android:id="@+id/btnclose"
                android:src="@drawable/close" />


            </LinearLayout>
    </LinearLayout>
</LinearLayout>