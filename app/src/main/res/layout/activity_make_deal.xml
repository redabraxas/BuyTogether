<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true" >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:orientation="vertical" >


            <RelativeLayout
                android:id="@+id/write_pro_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="카테고리 : "
                        android:textColor="#000000"
                        android:textSize="15dp"
                        android:typeface="sans" />

                    <LinearLayout
                        android:padding="10dp"
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                        <Spinner
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/spinner_big_category"
                            android:spinnerMode="dropdown" />

                        <Spinner
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/spinner_small_category"
                            android:spinnerMode="dropdown" />
                    </LinearLayout>


                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#336c97cf"
                android:orientation="vertical" >
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/write_pro_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="상품명 : "
                        android:textColor="#000000"
                        android:textSize="15dp"
                        android:typeface="sans" />

                    <EditText
                        android:id="@+id/pro_name"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:textColor="#000000"
                        android:textSize="15dp"
                        android:typeface="sans" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#336c97cf"
                android:orientation="vertical" >
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/write_maxBook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="모집 인원 : "
                        android:textColor="#000000"
                        android:textSize="15dp"
                        android:typeface="sans" />

                    <EditText
                        android:id="@+id/member"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:padding="10dp"
                        android:textColor="#000000"
                        android:textSize="15dp"
                        android:typeface="sans"
                        android:digits="0123456789-"
                        android:inputType="phone"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" 명 "/>
                </LinearLayout>
            </RelativeLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#336c97cf"
                android:orientation="vertical" >
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/write_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="마감 날짜 :   "
                        android:textColor="#000000"
                        android:textSize="15dp"
                        android:typeface="sans" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/edit_birthday"/>

                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#336c97cf"
                android:orientation="vertical" >
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/write_pro_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="상품 코멘트 : "
                        android:textColor="#000000"
                        android:textSize="15dp"
                        android:typeface="sans" />

                    <EditText
                        android:id="@+id/pro_comment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="상품에 대한 간단한 코멘트를 입력해주세요."
                        android:maxLines="4"
                        android:padding="10dp"
                        android:textColor="#000000"
                        android:textSize="15dp"
                        android:typeface="sans" />
                </LinearLayout>
            </RelativeLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#336c97cf"
                android:orientation="vertical" >
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/write_pro_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="가격 : "
                        android:textColor="#000000"
                        android:textSize="15dp"
                        android:typeface="sans" />

                    <EditText
                        android:id="@+id/pro_price"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:padding="10dp"
                        android:textColor="#000000"
                        android:textSize="15dp"
                        android:typeface="sans"
                        android:digits="0123456789-"
                        android:inputType="phone"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" 원 "/>
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#336c97cf"
                android:orientation="vertical" >
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/write_site"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="판매처 사이트 : "
                        android:textColor="#000000"
                        android:textSize="15dp"
                        android:typeface="sans" />

                    <EditText
                        android:id="@+id/site"
                        android:layout_width="240dp"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:padding="10dp"
                        android:textColor="#000000"
                        android:textSize="15dp"
                        android:typeface="sans" />

                </LinearLayout>
            </RelativeLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#336c97cf"
                android:orientation="vertical" >
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/write_phone_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="연락처 : "
                        android:textColor="#000000"
                        android:textSize="15dp"
                        android:typeface="sans" />

                    <Spinner
                        android:id="@+id/spinner_phone"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" - "/>

                    <EditText
                        android:id="@+id/phone2"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:textColor="#000000"
                        android:textSize="15dp"
                        android:typeface="sans"
                        android:digits="0123456789-"
                        android:inputType="phone"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" - "/>

                    <EditText
                        android:id="@+id/phone3"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:textColor="#000000"
                        android:textSize="15dp"
                        android:typeface="sans"
                        android:digits="0123456789-"
                        android:inputType="phone"/>

                </LinearLayout>
            </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#336c97cf"
            android:orientation="vertical" >
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/write_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="계좌 : "
                android:textColor="#000000"
                android:textSize="15dp"
                android:typeface="sans" />

            <Spinner
                android:id="@+id/spinner_bank"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                />


            <EditText
                android:id="@+id/account"
                android:layout_marginLeft="5dp"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textColor="#000000"
                android:textSize="15dp"
                android:hint="계좌 번호를 입력해주세요."
                android:typeface="sans"
                android:digits="0123456789-"
                android:inputType="phone"/>

                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#336c97cf"
                android:orientation="vertical" >
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/report_write_picturelayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="대표 이미지  "
                        android:textColor="#000000"
                        android:textSize="15dp"
                        android:typeface="sans" />


                    <Button
                        android:paddingRight="8dp"
                        android:paddingLeft="8dp"
                        android:id="@+id/button_selectpic"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:text="upload"
                        android:background="#336c97cf"
                        android:textSize="13dp"
                        android:typeface="sans" />

                </LinearLayout>


            </RelativeLayout>

            <ImageView
                android:id="@+id/imageView_pic"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_gravity="center"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#336c97cf"
                android:orientation="vertical" >
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/report_write_picturelayout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="상세 이미지  "
                        android:textColor="#000000"
                        android:textSize="15dp"
                        android:typeface="sans" />

                    <Button
                        android:paddingRight="8dp"
                        android:paddingLeft="8dp"
                        android:id="@+id/button_selectpic1"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:text="upload"
                        android:background="#336c97cf"
                        android:textSize="13dp"
                        android:typeface="sans" />

                </LinearLayout>


            </RelativeLayout>

            <ImageView
                android:id="@+id/imageView_pic1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_gravity="center"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#336c97cf"
                android:orientation="vertical" >
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/uploadButton"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginRight="5dp"
                    android:text="작성"
                    android:background="@null"
                    android:textColor="#0099CC"
                    android:textSize="13dp"
                    android:typeface="sans" />

                <Button
                    android:id="@+id/report_cancelbt"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:text="취소"
                    android:background="@null"
                    android:textColor="#ff4444"
                    android:textSize="13dp"
                    android:typeface="sans" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>