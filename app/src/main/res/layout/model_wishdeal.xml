<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:padding="10dp">

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/example"
        android:id="@+id/wishDealThumbnail" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.chocoroll.buyto.Model.MyTextViewBold
            android:layout_marginTop="2dp"
            android:layout_marginLeft="20dp"
            android:layout_width="250dp"
            android:layout_height="18dp"
            android:textSize="18dp"
            android:text="하"
            android:lineSpacingMultiplier="1.4"
            android:layout_marginBottom="10dp"
            android:textColor="#787878"
            android:id="@+id/txt_category"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <com.chocoroll.buyto.Model.MyTextView
            android:layout_marginLeft="20dp"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:textSize="16dp"
            android:text="상품이름kkkkkkkkkkkkkkkkkkkk"
            android:lineSpacingMultiplier="1.4"
            android:layout_marginBottom="10dp"
            android:textColor="#8C8C8C"
            android:id="@+id/txt_name"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.chocoroll.buyto.Model.MyTextView
                android:paddingTop="3dp"
                android:paddingBottom="1dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WISH"
                android:layout_marginLeft="100dp"
                android:textSize="15dp"
                android:background="#E9B0B1"
                android:paddingLeft="5dp"
                android:textColor="#f1ffffff"/>

            <com.chocoroll.buyto.Model.MyTextView
                android:paddingTop="3dp"
                android:paddingBottom="1dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="현재인원"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:id="@+id/txt_wish"
                android:textColor="#f1ffffff"
                android:background="#E9B0B1" />



        </LinearLayout>

    </LinearLayout>

</LinearLayout>