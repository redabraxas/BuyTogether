<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:padding="10dp">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/example"
        android:id="@+id/dealLogo" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="상품이름"
            android:layout_marginBottom="10dp"
            android:textColor="#f1393939"
            android:id="@+id/dealName"
            android:layout_marginTop="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />



        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13dp"
                    android:text="대기번호"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textColor="#f1ffffff"
                    android:background="#9981cf65" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textSize="13dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="입금하세요"
                    android:layout_gravity="bottom"
                    android:id="@+id/stateNum" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13dp"
                    android:text="마감날짜"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textColor="#f1ffffff"
                    android:background="#9981cf65" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textSize="13dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="없습니다"
                    android:layout_gravity="bottom"
                    android:id="@+id/stateDate" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13dp"
                    android:text="입금계좌"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textColor="#f1ffffff"
                    android:background="#9981cf65" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textSize="13dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="없습니다"
                    android:layout_gravity="bottom"
                    android:id="@+id/stateDeposit" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13dp"
                    android:text="입금금액"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textColor="#f1ffffff"
                    android:background="#9981cf65" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textSize="13dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="없습니다"
                    android:layout_gravity="bottom"
                    android:id="@+id/statePrice" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>



</LinearLayout>